<h1>All tags</h1>

<ul id = "tags">
	<% @tags.each do |tag| %>
		<li>
			<%= link_to tag.name, tag_path(tag) %>
			<% if logged_in? %>
				<%= link_to "Delete", [tag], method: :delete, data: { confirm: "Really delete this tag?" } %>
			<% end %>
		</li>
	<% end %>
</ul>
<p>
<%= link_to "<< Back to Articles List", articles_path %>
</p>